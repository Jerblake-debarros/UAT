        function stringLengthCheck(name, minlength, maxlength)
            {
        var mnlen = 1;
        var mxlen = 20;
 
        if(name.value.length<mnlen || name.value.length> mxlen)
        { 
        alert("Name should be " +mnlen+ " to " +mxlen+ " characters.");
        return false;
        }//lines 34-42 check length of string to make sure not to long or short
        else
        { 
            button.disabled = false;//supposed to reenable the button but will only do it for one tick
            return true;
        }
            }    
        let input = document.querySelector(".input");
         let button = document.querySelector(".button");
        button.disabled = false; //setting button state to disabled but when enabled only enables for one tick
