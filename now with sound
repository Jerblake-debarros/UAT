        document.getElementById("countdownlabel").innerHTML= count;   
        function countDown() { 
            setInterval (function (){
        count --;//The last three are the countdown function what it does everytime it runs and starting the interval
        if(count>=5)
        {
            document.getElementById("countdownlabel").innerHTML= count;//Showing the countdown 
        }
        else if(count>=0)
        {
            document.getElementById("blastofflabel").innerHTML="Half Way Warning";//To display the half way warning
            document.getElementById("countdownlabel").remove()= count;//had to get rid of the numbers because having both words and numbers look bad
